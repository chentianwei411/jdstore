<h1> 后台产品列表 </h1>
<%= link_to("添加产品", new_admin_product_path, :class => "btn btn-primary btn-lg active pull-right")%>

<table class="table  table-hover table-bordered">
  <!-- http://www.w3schools.com/bootstrap/bootstrap_ref_css_tables.asp  内含table的不同显示样式。 -->
  <thead>
    <tr>
      <td>名称</td>
      <td>简介</td>
      <td>库存</td>
      <td>价格</td>
      <td>操作选项</td>
      <td>创建时间</td>
    </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%= link_to(product.title, admin_product_path(product))%>
      </td>
      <td>
        <%= simple_format(product.description)%>
      </td>
      <td>
        <%= product.quantity%>
      </td>
      <td>
        <%= product.price%>
      </td>
      <td>
        <%= link_to("修改", edit_admin_product_path(product), :class => "btn btn-default btn-xs")%>
        <%= link_to("删除", admin_product_path(product), method: :delete , data: {confirm: "确定删除吗?"}, class: "btn btn-default btn-xs")%>
        <!--  不同的写法-->
      </td>
      <td>
        <%= product.created_at%>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
